<div id="carouselOpinionsTripAdvisor" class="carousel slide slideOpinionsTripAdvisor my-3" data-ride="carousel">
    <div class="carousel-inner">
        {% for opinion in opinionsTripAdvisor %}
            {% if loop.first %}
            <div class="carousel-item active text-center p-4">
            {% else %}
            <div class="carousel-item text-center p-4">
            {% endif %}
                <div class="d-block">
                    <h3 class="concept mb-4">{{ opinion.title }}</h3>
                    <p class="comment">{{ opinion.comment }}</p>
                    <p class="mt-4 mb-0">
                        Evalué par {{ opinion.pseudo }} à {{ opinion.note }}/5.
                        Le {{ opinion.DateOpinion|date('d/m/Y') }}.
                    </p>
                </div>
            </div>
        {% endfor %}

    </div>
    <a class="carousel-control-prev" href="#carouselOpinionsTripAdvisor" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselOpinionsTripAdvisor" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
